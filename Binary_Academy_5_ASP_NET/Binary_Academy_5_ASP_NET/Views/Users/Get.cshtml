@model Binary_Academy_5_ASP_NET.Models.User

@{
    ViewData["Title"] = "Get";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Get</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal"></dl>
</div>
<div>
    <p>@Model.name</p>
    <p>@Model.avatar</p>
    <p>@Model.address</p>
    <p>@Model.createdAt</p>
    <br />

    <p><b>TODOS</b></p>

    @await Html.PartialAsync("ListTodos", Model)

    <p><b>POSTS</b></p>
    @if (@Model.posts.Count == 0)
    {
        <p>No posts</p>
    }
    else
    {
        @foreach (var post in @Model.posts)
        {
            <p>@post.title</p>
            <p>@post.body</p>
            <p>@post.createdAt</p>
            <p>@post.likes</p>
            @if (post.comments.Count == 0)
            {
                <p>No comments</p>
            }
            else
            {
                @foreach (var comment in @post.comments)
                {
                    <p>CommentBody     @comment.body</p>
                    <p>CommentCreatedAt     @comment.createdAt</p>
                    <p>CommentLikes     @comment.likes</p>
                }
            }

            <br />
        }
    }
    <a asp-action="Index">Back to List</a>
</div>
