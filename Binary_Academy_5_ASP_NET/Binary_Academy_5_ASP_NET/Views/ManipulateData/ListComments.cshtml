@model List<Binary_Academy_5_ASP_NET.Models.Comment>
    @if (@Model.Count == 0)
    {
        <p>No comments</p>
    }
    else
    {
        <table class="table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Created at</th>
                    <th>Likes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comment in Model)
                {
                    <tr>
                        <td>@comment.body</td>
                        <td>@comment.createdAt</td>
                        <td>@comment.likes
                        <td>
                    </tr>
                }
            </tbody>
        </table>
    }