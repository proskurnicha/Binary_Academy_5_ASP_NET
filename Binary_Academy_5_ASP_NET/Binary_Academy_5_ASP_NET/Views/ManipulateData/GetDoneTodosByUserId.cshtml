@model List<Binary_Academy_5_ASP_NET.Models.Todo>

@{
    ViewData["Title"] = "GetDoneTodosByUserId";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Get done todos by user id</h2>


<form asp-controller="ManipulateData" asp-action="GetDoneTodosByUserId" method="post">
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Id</span>
                <input type="text" name="id" class="form-control" placeholder="Id" aria-label="Id" aria-describedby="basic-addon1">
            </div>
            <br />
            <input class="btn btn-success" type="submit" value="Get todos">
        </div>
    </div>
</form>
<br />

@if (Model != null)
{
    @await Html.PartialAsync("ListTodos", Model)
}