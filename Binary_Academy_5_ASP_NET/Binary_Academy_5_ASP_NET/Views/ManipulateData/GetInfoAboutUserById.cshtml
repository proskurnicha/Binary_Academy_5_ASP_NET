@model Binary_Academy_5_ASP_NET.Models.ViewModel.InfoAboutUserById;
@{
    ViewData["Title"] = "GetInfoAboutUserById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Get information about user by id</h2>

<form asp-controller="ManipulateData" asp-action="GetInfoAboutUserById" method="post">
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Id</span>
                <input type="text" name="id" class="form-control" placeholder="Id" aria-label="Id" aria-describedby="basic-addon1">
            </div>
            <br />
            <input class="btn btn-success" type="submit" value="Get info">
        </div>
    </div>
</form>

@{
    List<User> users = new List<User>();
    if (Model != null) { users.Add(Model.UserById); }
}

@if (Model != null)
{
    <br />
    <p><b>User</b></p>
    @await Html.PartialAsync("ListUsers", users)

    <br />
    <p><b>Last Post</b></p>
    @await Html.PartialAsync("ListPosts", Model.LastPost)

    <br />
    <p><b>Count comments last post</b></p>
    <p>@Model.CountCommentsLastPost</p>

    <br />
    <p><b>Count todos no done</b></p>
    <p>@Model.CountTaskNotDone</p>

    <br />
    <p><b>Most popular post that have maximum count comments with lenght more thany 80</b></p>
    @await Html.PartialAsync("ListPosts", Model.MostPopularPostByLenght)

    <br />
    <p><b>Most popular post that have maximum count likes</b></p>
    @await Html.PartialAsync("ListPosts", Model.MostPopularPostByLikes)
}
