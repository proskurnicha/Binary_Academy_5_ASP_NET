@{
    ViewData["Title"] = "GetCountComments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Get count comments</h2>

<form asp-controller="ManipulateData" asp-action="GetCountComments" method="post">
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Id</span>
                <input type="text" name="id" class="form-control" placeholder="Id" aria-label="Id" aria-describedby="basic-addon1">
            </div>
            <br />
            <input class="btn btn-success" type="submit" value="Get count">
        </div>
    </div>
</form>
<br />
<div class="row">
    <div class="col-md-4 mb-3">
        <div class="alert alert-success" role="alert">
            Count comments user @ViewData["id"]: @ViewData["countComments"]
        </div>
    </div>
</div>
