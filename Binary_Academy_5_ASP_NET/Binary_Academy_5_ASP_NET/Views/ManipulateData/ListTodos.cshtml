@model List<Binary_Academy_5_ASP_NET.Models.Todo>;
@if (@Model.Count == 0)
{
    <p>No todos</p>
}
else
{
    <table class="table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Created at</th>
                <th>Is complite</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var todo in @Model)
            {
                <tr>
                    <td>@todo.name</td>
                    <td>@todo.createdAt</td>
                    <td>@todo.isComplete</td>
                </tr>
            }
        </tbody>
    </table>
}