@model List<User>;
@{
    ViewData["Title"] = "GetOrderedListOfUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetOrderedListOfUsers</h2>

@if (@Model.Count == 0)
{
    <p>No users</p>
}
else
{
    <table class="table-bordered">
        <thead>
            <tr>
                <th>Avatar</th>
                <th>Name</th>
                <th>Created at</th>
                <th>Todos</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in @Model)
            {
                <tr>

                    <td><img class="avatar" src=@user.avatar alt="Card image cap"></td>
                    <td>@user.name</td>
                    <td>@user.createdAt</td>
                    @{
                        string value = "#" + user.id;
                    }
                    <td>
                        <button class="btn btn-success" type="button" data-toggle="collapse" data-target=@value aria-expanded="false" aria-controls="@user.id">Todos</button>
                        <div class="row ordered_table">
                            <div class="collapse multi-collapse" id=@user.id>
                                @await Html.PartialAsync("../Posts/ListTodos", user.todos)
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
